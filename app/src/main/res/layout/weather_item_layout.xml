<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#7000"
    android:orientation="vertical"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date"
            style="@style/weatherItemTextStyle" />

        <TextView
            android:id="@+id/tv_sunrise"
            style="@style/weatherItemTextStyle" />

        <TextView
            android:id="@+id/tv_sunset"
            style="@style/weatherItemTextStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_temper"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/image"
            android:scaleType="centerInside"
            android:src="@mipmap/temperature" />

        <TextView
            android:id="@+id/tv_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:textColor="#fff"
            android:textSize="13sp" />

        <View
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:background="@drawable/white_radius" />

        <TextView
            android:id="@+id/tv_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:textColor="#fff"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fx"
            style="@style/weatherItemTextStyle"
            android:drawableLeft="@mipmap/fx2"
            android:drawablePadding="3dp"
            android:drawableStart="@mipmap/fx2" />

        <TextView
            android:id="@+id/tv_fl"
            style="@style/weatherItemTextStyle"
            android:drawableLeft="@mipmap/fl1"
            android:drawablePadding="3dp"
            android:drawableStart="@mipmap/fl1" />

        <TextView
            android:id="@+id/tv_aqi"
            style="@style/weatherItemTextStyle"
            android:drawableLeft="@mipmap/aqi_o2"
            android:drawablePadding="3dp"
            android:drawableStart="@mipmap/aqi_o2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:textColor="#fff"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:textColor="#fff"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>
