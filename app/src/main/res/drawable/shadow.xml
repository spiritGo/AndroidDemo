<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="3dp"
        android:right="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="315"
                android:centerColor="#ff666666"
                android:endColor="#ff777777"
                android:startColor="#ffC5C5C5" />

            <corners android:radius="6dp" />
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:right="4dp">
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="#88baff" />
                    <corners android:radius="6dp" />
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#00baff" />
                    <corners android:radius="6dp" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>